<UserControl x:Class="WpfPlayground.View.VisibilityConvertView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPlayground.ViewModel"
             xmlns:dex ="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:converter ="clr-namespace:WpfPlayground"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:VisibilityConverterViewModel/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <converter:VisibilityConverter x:Key="VisibilityConVerter"/>
    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <dex:CheckEdit x:Name="checkbox" Content="Label Converter" IsChecked="{Binding IsVisibilityLabel}" />
            <Label Content="Show Converter" Visibility="{Binding IsVisibilityLabel ,Converter={StaticResource VisibilityConVerter}}"/>
        </StackPanel>
    </Grid>
</UserControl>
