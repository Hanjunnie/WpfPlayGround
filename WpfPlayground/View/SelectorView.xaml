<UserControl x:Class="WpfPlayground.View.SelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPlayground.ViewModel"
             xmlns:model="clr-namespace:WpfPlayground.Model"
             xmlns:utility="clr-namespace:WpfPlayground.Utility"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:SelectorViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <DataTemplate x:Key="NormalTaskTemplate" DataType="model:SelectorModel">
            <TextBlock Text="{Binding Title}"/>
        </DataTemplate>
        <DataTemplate x:Key="HighTaskTemplate" DataType="model:SelectorModel">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🔥" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding Title}" FontWeight="Black"/>
            </StackPanel>
        </DataTemplate>
        <utility:TaskTemplateSelector x:Key="TaskSelector" NormalTemplate="{StaticResource HighTaskTemplate}" HighTemplate="{StaticResource NormalTaskTemplate}"/>
    </UserControl.Resources>

    <Grid>
        <ListBox ItemsSource="{Binding Tasks}"
                 ItemTemplateSelector="{StaticResource TaskSelector}"/>
    </Grid>
</UserControl>
